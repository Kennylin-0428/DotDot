<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">


    <Button
        android:id="@+id/btn_dot"
        android:layout_width="150dp"
        android:layout_height="64dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/dot_btn_bg"
        android:gravity="center"
        android:text="@string/getpoint"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:shadowColor="#0D1435"
        android:shadowDx="5"
        android:shadowDy="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/notice"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/not"
        android:shadowColor="#556CFF"
        android:shadowDx="2"
        android:shadowDy="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_dot"
        />

    <Button
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:id="@+id/home"
        android:layout_marginBottom="35dp"
        android:background="@drawable/peo"
        android:shadowColor="#556CFF"
        android:shadowDx="2"
        android:shadowDy="2"

        app:layout_constraintEnd_toStartOf="@id/btn_dot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MemberIndex" />

</androidx.constraintlayout.widget.ConstraintLayout>