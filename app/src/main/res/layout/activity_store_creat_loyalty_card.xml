        app:layout_constraintBottom_toBottomOf="@+id/background"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/dot6"
        app:layout_constraintTop_toBottomOf="@+id/dot2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/dot8"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/empty_dot"
        app:layout_constraintBottom_toBottomOf="@+id/background"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/dot7"
        app:layout_constraintTop_toBottomOf="@+id/dot3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/dot9"
        android:layout_width="30dp"
