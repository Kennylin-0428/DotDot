    <TextView
        android:id="@+id/textView7"
        android:layout_width="200dp"
        android:layout_height="3dp"
        android:layout_marginBottom="15dp"
        android:background="#D8878484"
        app:layout_constraintBottom_toTopOf="@+id/dot3"
