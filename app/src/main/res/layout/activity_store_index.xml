<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">


    <View
        android:id="@+id/view4"
        android:layout_width="576dp"
        android:layout_height="287dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bgskyblue"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/map" />

    <View
        android:id="@+id/view3"
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="72dp"
        android:background="@color/gray"
        android:elevation="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/map" />

    <TextView
        android:id="@+id/storetitle"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:elevation="3dp"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mom"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="16dp"
        android:elevation="3dp"
        android:textColor="@color/blue"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <TextView
        android:id="@+id/word2"
        android:layout_width="66dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:elevation="3dp"
        android:text="共發送"
        android:textSize="22dp"
        app:layout_constraintStart_toEndOf="@+id/mom"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <TextView
        android:id="@+id/pointsgive"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_marginStart="108dp"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="60dp"
        android:elevation="3dp"
        android:gravity="center"
        android:textColor="@color/darkblue"
        android:textSize="110dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <TextView
        android:id="@+id/word1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="185dp"
        android:elevation="3dp"
        android:text="點"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/pointsgive"
        app:layout_constraintTop_toTopOf="@+id/view4" />

    <TextView
        android:id="@+id/couponsgive"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_marginStart="340dp"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="60dp"
        android:elevation="3dp"
        android:text="41"
        android:textColor="@color/darkblue"
        android:textSize="110dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3" />


    <TextView
        android:id="@+id/wordWarning"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="185dp"
        android:elevation="3dp"
        android:text="張"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/couponsgive"
        app:layout_constraintTop_toTopOf="@+id/view4" />

    <Button
        android:id="@+id/btn_dot"
        android:layout_width="150dp"
        android:layout_height="64dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/dot_btn_bg"
        android:gravity="center"
        android:shadowColor="#0D1435"
        android:shadowDx="5"
        android:shadowDy="5"
        android:text="@string/getpoint"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/storeNotification"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/not"
        android:shadowColor="#556CFF"
        android:shadowDx="2"
        android:shadowDy="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_dot" />

    <Button
        android:id="@+id/home"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/ic_people"
        android:shadowColor="#556CFF"
        android:shadowDx="2"
        android:shadowDy="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_dot"
        app:layout_constraintStart_toStartOf="parent" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:context=".MemberIndex"
        tools:layout_editor_absoluteY="73dp" />

</androidx.constraintlayout.widget.ConstraintLayout>