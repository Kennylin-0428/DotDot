<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".member_storemode_record"
    android:background="@drawable/bg_frame">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/memberRecStoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/usee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用"
            android:layout_marginTop="15dp"
            android:layout_marginRight="80dp"
            android:textColor="#FB0303"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/memberRecStoName"
            app:layout_constraintRight_toLeftOf="@+id/gett" />
        <TextView
            android:id="@+id/gett"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="獲得"
            android:layout_marginTop="15dp"
            android:textColor="#3F51B5"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/memberRecStoName"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="優惠券"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="15dp"
            android:textColor="#FF9800"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/memberRecStoName"
            app:layout_constraintLeft_toRightOf="@+id/gett"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/lay1"
        android:id="@+id/tab_lay"
        app:tabIndicatorColor="@color/com_facebook_blue"
        app:tabTextColor="@color/gray"
        app:tabSelectedTextColor="@color/black"
        android:background="@color/white" />
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:id="@+id/view_page"
        android:layout_below="@id/tab_lay"/>
</RelativeLayout>