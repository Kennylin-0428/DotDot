<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:background="@color/white"
    android:outlineProvider="none"
    >
    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:text="集點卡"
        android:textColor="#3F51B5"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.127"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Collectioncard"
        android:outlineProvider="none"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="5dp"
        >


        <View
            android:id="@+id/view"
            android:layout_width="500dp"
            android:layout_height="220dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/bg_frame"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="15dp"
            android:text="111"
            android:textColor="@color/gray"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view" />

        <TextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center|bottom"
            android:text="7"
            android:textSize="50dp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintStart_toEndOf="@+id/view2"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintVertical_bias="0.227" />

        <View
            android:id="@+id/view2"
            android:layout_width="330dp"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:background="@color/gray"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/Title" />

        <TextView
            android:id="@+id/Dot1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/gray_dot"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/view2"/>

        <TextView
            android:id="@+id/Dot2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/gray_dot"
            app:layout_constraintStart_toEndOf="@+id/Dot1"
            app:layout_constraintTop_toBottomOf="@+id/view2"/>

        <TextView
            android:id="@+id/Dot3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/gray_dot"
            app:layout_constraintStart_toEndOf="@+id/Dot2"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <TextView
            android:id="@+id/Dot4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/gray_dot"
            app:layout_constraintStart_toEndOf="@+id/Dot3"
            app:layout_constraintTop_toBottomOf="@+id/view2"></TextView>

        <TextView
            android:id="@+id/Dot5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/gray_dot"
            app:layout_constraintStart_toEndOf="@+id/Dot4"
            app:layout_constraintTop_toBottomOf="@+id/view2" />


        <TextView
            android:id="@+id/Dot7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/gray_dot"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/Dot1" />

        <TextView
            android:id="@+id/Dot7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/gray_dot"
            app:layout_constraintStart_toEndOf="@+id/Dot6"
            app:layout_constraintTop_toBottomOf="@+id/Dot2" />

        <TextView
            android:id="@+id/Dot8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/gray_dot"
            app:layout_constraintStart_toEndOf="@+id/Dot6"
            app:layout_constraintTop_toBottomOf="@+id/Dot3" />

        <TextView
            android:id="@+id/Dot9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/gray_dot"
            app:layout_constraintStart_toEndOf="@+id/Dot8"
            app:layout_constraintTop_toBottomOf="@+id/Dot4">

        </TextView>

        <TextView
            android:id="@+id/Dot10"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/gray_dot"
            app:layout_constraintStart_toEndOf="@+id/Dot9"
            app:layout_constraintTop_toBottomOf="@+id/Dot5" />

        <TextView
            android:id="@+id/Dot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="92dp"
            android:text="點"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/points"
            app:layout_constraintTop_toTopOf="@+id/view" />

        <Button
            android:id="@+id/coupon"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/ic_ticket"
            android:elevation="10dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:text="優惠券"
            android:textColor="#676666"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>